%form{:action => "/login", :method => "post"}
  %div.shadow-lg.stack-md.rounded-md.bg-neutral.text-neutral-content{style: "padding: 4rem; border-radius: .5rem; max-width: 30rem; margin:auto"}
    %span= "Login"
    %label.form-control
      %div.label
        %span.label-text.text-neutral-content= "Email"
      %input.input.input-bordered{:style => "color: hsl(var(--n)); background-color: hsl(var(--nc))", :name => :username}
    %label.form-control
      %div.label
        %span.label-text.text-neutral-content= "Password"
      %input.input.input-bordered{:style => "color: hsl(var(--n)); background-color: hsl(var(--nc))", type: :password, :name => :password}
    %div.stack-lg.mt-12
      %div.flex.flex-row.justify-center
        %button.btn.btn-accent.w-56= "Login"
      %div.flex.flex-row.justify-center
        %a.link{style: "font-size: .85rem;", href: "/signup"}= "Sign up"